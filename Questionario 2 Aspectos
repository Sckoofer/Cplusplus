//Avaliador de perfil, aquele perfil que mais se compara ao perfil da empresa
#include <iostream>
#include <stdlib.h>

using namespace std;

int main()
{	

	int NumEntrev, ContadorValor;
	int TrabEmEqui;//variaveis de opcoes
	int Perg1, Perg2, Perg3, Perg4, i;
	
	cout << "Responda com sinceridade as perguntas e avaliaremos o seu perfil\n";
	cout << "Quantas pessoas responderao esse questionario?\n";
	cin >> NumEntrev;
	cout << "Para responder a pergunta use numeros e tecle ENTER\n\n\n\n";
	system ("cls");
	
	while (ContadorValor <= NumEntrev)
	{	
	
		//indica a reinicializacao do questionario
		if (ContadorValor >= 1){
			system("cls");
			printf("\n\n\n\nQuestionario numero %d iniciado", ContadorValor);
			cout << "\n\n\n";
		}
		
		
		
		//perguntas e opcoes
		cout << "\n___________________________________\n\n";
		cout << "Voce gosta de trabalhar em equipe?\n";
		cout << "\n___________________________________\n\n";
		cout << "\n\n\n\n";
		cout << "------------------------";
		cout << "\nDigite 0 para responder 'nao'\nDigite 1 para responder 'um pouco";
		cout << "\nDigite 2 para responder 'gosto'\nDigite 3 para responder 'gosto bastante'";
		cout << "\nDigite 4 para responder 'prefiro trabalhar em equipe'";
		cout << "\n------------------------\n";
		cout << "\n>>>>>     ";
		cin >> Perg1;
		
		
		
		system("cls");
		cout << "\n___________________________________\n\n";
		cout << "Como voce trabalha sob pressao?";
		cout << "\n___________________________________\n\n";
		cout << "\n\n\n\n";
		cout << "------------------------";
		cout << "\nDigite 0 para responder 'nao'\nDigite 1 para responder 'muita pressao me incomoda'";
		cout << "\nDigite 2 para responder 'nao me incomoda trabalhar sob pressao'";
		cout << "\nDigite 3 para responder 'trabalho bem sob pressao' ";
		cout << "\n------------------------\n";
		cout << "\n>>>>>     ";
		cin >> Perg2;
		
		
		
		system ("cls");
		cout << "\n___________________________________\n\n";
		cout << "Voce se considera uma pessoa organizada?";
		cout << "\n___________________________________\n\n";
		cout << "\n\n\n\n";
		cout << "---------------------------------------";
		cout << "\nDigite 0 para responder 'nao'\nDigite 1 para responder 'sou uma pessoa pouco organizada'";
		cout << "\nDigite 2 para desponder 'mantenho meu ambiente organizado'";
		cout << "\nDigite 3 para responder 'tudo deve estar organizado e guardado'";
		cout << "\nDigite 4 para reponder  'sou perfeccionista nao suporto exergar nada fora do lugar'";
		cout << "\n-----------------------------------\n";
		cout << "\n>>>>>     ";
		cin >> Perg3;
		
		
		
		
		system("cls");
		cout << "\n___________________________________\n\n";
		cout << "Quando acontece uma discussao entre dois colegas, o que voce pensa sobre isso?";
		cout << "\n___________________________________\n\n";
		cout << "\n\n\n\n";
		cout << "---------------------------------------";
		cout << "\nDigite 0 para responder 'nao me envolvo em discussoes'";
		cout << "\nDigite 1 para responder 'defendo as ideias dos meus amigos se for preciso'";
		cout << "\nDigite 2 para responder 'encerro a discussao, de ambos os lados'";
		cout << "\nDigite 3 para responder 'gosto de discussoes construtivas e ouvir opnioes'";
		cout << "\nDigite 4 para responder 'discussoes sao importantes, devem ser ouvidas'";
		cout << "\n------------------------------------\n";
		cout << "\n>>>>>     ";
		cin >> Perg4;
		
		
		
		
		
		
		//Finalizacao do questionario
		ContadorValor++;
		system("cls");
		cout << "\n=====================\nQuestionario Encerrado\nDigite uma letra ou\nnumero para reinicia-lo\n";
		cin >> i;
		system("cls");
		
	}
	
	

	
	
	return 0;
}

