//Avaliador de perfil, aquele perfil que mais se compara ao perfil da empresa
#include <iostream>
#include <stdlib.h>



using namespace std;

void PergTela1()
{
	cout << "\n___________________________________\n\n";
	cout << "\n\n\n\n";
	cout << "------------------------";
	
}
void PergTela2()
{
	cout << "\n------------------------\n";
	cout << "\n>>>>>     ";
}
void TelaAviso(int contador)
{
	if(contador > 0)
	{	
		system ("cls");
		cout << "==================================\n";
		cout << "==================================\n";
		cout << "==================================\n";
		cout << "DIGITE APENAS O NUMEROS DAS OPCOES\n";
		cout << "==================================\n";
		cout << "==================================\n";
	}
}






int main()
{	

