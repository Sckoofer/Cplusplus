			cout << "\nDigite 4 para responder 'prefiro trabalhar em equipe'";
			PergTela2();
			cin >> Perg1; ///o que voce vai fazer se o usuario inserir uma letra aqui?
			contadorErro++;
		}

		
		contadorErro = 0;
		
		
		while((Perg2 <= -1 ) || (Perg2 > 3 ))
		{
			system("cls");
			TelaAviso(contadorErro);
			cout << "\n___________________________________\n\n";
