	cout << "Quantas pessoas responderao esse questionario?\n";
	cin >> NumEntrev;
	cout << "Para responder a pergunta use numeros e tecle ENTER\n\n\n\n";
	system ("cls");
	
	while ((ContadorValor < NumEntrev) && (NumEntrev > 0))
	{	
	
		//indica a reinicializacao do questionario
		if (ContadorValor >= 1){
			system("cls");
			printf("\n\n>>>>>>>Questionario numero %d iniciado", ContadorValor + 1);
			cout << "\n\n\n";
		}
		
		
		

		while((Perg1 <= -1 ) || (Perg1 > 4 ))
		{
			
			TelaAviso(contadorErro);
			cout << "\n___________________________________\n\n";
